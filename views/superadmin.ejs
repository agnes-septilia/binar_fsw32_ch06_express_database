<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>USER DATABASE</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
  </head>
<body>
  <h1>USER DATABASE</h1>
  <br>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">USERNAME</th>
        <th scope="col">EMAIL</th>
        <th scope="col">GENDER</th>
        <th scope="col">COUNTRY</th>
        <th scope="col">CREATED AT</th>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% userdata.forEach(function (data, index) { %>        
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= data.username %></td>
        <td><%= data.email %></td>
        <td><%= data.gender %></td>
        <td><%= data.country %></td>
        <td><%= data.createdAt %></td>
        <td><a href="/admin-info?id=<%= data.id %>"><button type="button" class="btn btn-info" data-toggle="tooltip" data-placement="bottom" title="View"><i class="fas fa-info"></i></button></a></td>
        <td><form method="post" action="/admin-info?id=<%= data.id %>"><button type="submit" class="btn btn-warning" data-toggle="tooltip" data-placement="bottom" title="Edit"><i class="far fa-edit"></i></button></form></td>

        <td>
          <!-- Trigger modal for delete button -->
          <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal<%= data.id %>"" data-placement="bottom" title="Delete">
            <i class="far fa-trash-alt"></i>
          </button>

          <!-- Modal -->
          <div class="modal fade" id="exampleModal<%= data.id %>"" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">WARNING!!!</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  This action will delete ALL data. Confirm Delete?
                </div>
                <div class="modal-footer">
                  <form method="post" action="/admin-delete?id=<%= data.id %>"><button type="submit" class="btn btn-danger"><i class="far fa-trash-alt"> Delete All</i></button></form>
                  <form method="post" action="/admin-info?id=<%= data.id %>"><button type="submit" class="btn btn-warning"><i class="far fa-edit"> Go to Edit Page</i></button></form>
                </div>
              </div>
            </div>
          </div>
        </td>

      </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- Button to add  data -->
  <a href="/admin-add"><button type="button" class="btn btn-success m-3" >
      <i class="fas fa-plus" > ADD DATA</i>
  </button></a>


</body>

<!-- bootstrap js -->
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

</html>