<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ADD USER</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

</head>
<body>
    <div class="screen d-flex flex-column justify-content-start m-3" id="login-page" >
        
        <div id="page-title"><h2>ADD DATA</h2></div>
        
        <!-- FORM -->
        <div class="d-flex" id="input-area" >
            <form action="/admin-dashboard" method="post" enctype="application/x-www-form-urlencoded">
                
                <div id="registration-area">
                    <div>
                        <label for="input-username">Username :</label>
                        <br>
                        <input class="input-field" type="text" name="username" id="input-username" required>   
                    </div>
                    <div>
                        <label for="input-email">Email :</label>
                        <br>
                        <input class="input-field" type="email" name="email" id="input-email" required>   
                    </div>
                    <div>
                        <label for="input-gender">Gender :</label>
                        <br>
                        <select name="gender" id="input-gender">
                            <option value="Female">Female</option>
                            <option value="Male">Male</option>
                        </select>
                    </div>
                    <div>
                        <label for="input-country">Country :</label>
                        <br>
                        <input class="input-field" type="text" name="country" id="input-country" >   
                    </div>
                </div>
                
                <br>
                <div class="d-flex align-items-center" id="button-area">
                    <div class="p-1"><button class = "btn-warning" type = "submit" ><i class="far fa-save"> SAVE</i></button></div>
                    <div class="p-1"><a href="/admin-dashboard"><button class = "btn-danger" type = "button" ><i class="fas fa-ban"> CANCEL</i></button></div></a>
                </div>

            </form>

        </div>
    </div>
</body>
<!-- bootstrap js -->
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

</html>